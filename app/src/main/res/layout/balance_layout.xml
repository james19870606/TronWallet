<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <WebView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/webView"/>
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nile測試網獲取餘額"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/address"
        android:hint="査詢地址輸入框"
        android:text="TQrY8tryqsYVCYS3MFbtffiPp2ccyn4STm"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trc20Address"
        android:hint="請輸入trc20合約地址"
        android:text="TXLAQ63Xg1NAzckPwKHvzw7CSEmLMEqcdj"/>

    <TextView
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:textStyle="bold"
        android:id="@+id/balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="等待查詢餘額…"/>

    <Button
        android:layout_marginTop="20dp"
        android:text="餘額查詢"
        android:textAllCaps="false"
        android:id="@+id/btn_getBalance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>